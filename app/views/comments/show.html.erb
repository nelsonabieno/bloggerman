<h1>Comments#show</h1>
<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <span class="card-title"> Showing Post for User <strong> <%= @user.nickname %> </strong></span>
        <%= form_for  @post_comment, :url => {:action => :update}, :html => {:class => 'col s6'} do |f| %>
            <%= f.label :body %>
            <%= f.text_area :body, :placeholder => 'Body', :class=>'materialize-textarea', :readonly => true %>
        <% end %>
      </div>
    </div>
  </div>
</div>