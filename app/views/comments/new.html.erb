<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <span class="card-title">New Comment for Post <b><%= @post.title %></b></span>

        <%= form_for  @comment, :url => {:action => :create}, :html => {:class => 'col s6'} do |f| %>
            <%= f.label :body %>
            <%= f.text_area :body, :placeholder => 'Comment Body',:class=>'materialize-textarea' %>
            <%= f.submit  :class=>'waves-effect waves-light btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>


