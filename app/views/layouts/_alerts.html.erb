<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<strong>
<p class="green-text card-text">
  <% if flash[:success] %>
      <%= flash[:success] %>
  <% end %>
</p>
</strong>

<strong>
  <p class="red-text card-text">
    <% if flash[:error] %>
        <% flash[:error].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
  </p>
</strong>